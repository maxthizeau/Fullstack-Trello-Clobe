{
  "name": "trello-clone-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@graphql-codegen/schema-ast": "^2.2.0",
    "@prisma/client": "^3.2.1",
    "apollo-server": "^3.3.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-scalars": "^1.11.1",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "lodash.find": "^4.6.0",
    "ncp": "^2.0.0",
    "prisma": "^3.2.1",
    "typescript": "^4.4.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/server.js",
    "build": "tsc -p tsconfig.prod.json",
    "generate": "npx prisma migrate dev",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "seed-data": "npx prisma db seed",
    "reset-data": "ts-node prisma/resetDatabase.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "yarn docker:up && dotenv -e .env.test npx prisma migrate deploy && dotenv -e .env.test jest -i && yarn docker:down"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-resolvers": "2.3.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "apollo-link-http": "^1.5.17",
    "apollo-server-testing": "^2.25.2",
    "cross-fetch": "^3.1.4",
    "dotenv-cli": "^4.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "jest": "^27.2.5",
    "jest-mock-extended": "^2.0.4",
    "node-fetch": "^3.0.0",
    "nodemon": "^2.0.13",
    "test-js": "^0.0.4",
    "ts-jest": "^27.0.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0"
  }
}
